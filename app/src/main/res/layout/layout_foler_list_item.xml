<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder_item_parent"
    style="@style/public_match_wrap"
    android:layout_marginTop="0.3dp"
    android:layout_marginBottom="0.3dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/img_folder_avatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="@dimen/public_10dp"
        android:background="@color/colorTheme"
        android:elevation="1dip"
        android:translationZ="@dimen/public_2dp" />

    <LinearLayout
        style="@style/public_double_match"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_folder_name"
            style="@style/public_match_wrap"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/public_size_20"
            android:text="news_article" />
        <TextView
            android:id="@+id/tv_folder_count"
            style="@style/public_match_wrap"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/public_size_15"
            android:text="xxxå¼ "/>
    </LinearLayout>
</LinearLayout>